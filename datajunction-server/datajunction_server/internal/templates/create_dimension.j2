{{ short_name }} = dj.create_dimension(
    name=f"{{ name }}",
    display_name="{{ display_name }}",
    description="""{{ description }}""",
    mode="{{ mode }}",
    primary_key=[{%- for column in primary_key %}
        "{{ column }}",
        {%- endfor %}{% if primary_key %}
    {% else %}{% endif %}],
    tags=[{%- for tag in tags %}
        dj.tag("{{ tag }}"),
        {%- endfor %}{% if tags %}
    {% else %}{% endif %}],
    query=f"""{{ query }}""",
    update_if_exists=True,
)
